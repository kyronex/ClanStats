<style>
/* CSS minimal et contextualisé */
#search-clans-table th:nth-child(1) { width: 20%; }
#search-clans-table th:nth-child(2) { width: 12%; }
#search-clans-table th:nth-child(3) { width: 15%; }
#search-clans-table th:nth-child(4) { width: 15%; }
#search-clans-table th:nth-child(5) { width: 15%; }
#search-clans-table th:nth-child(6) { width: 10%; }
#search-clans-table th:nth-child(7) { width: 13%; }
#search-clans-table code { font-size: 0.9rem; color: #6c757d; }
</style>

<div class="container mt-5">
    <p class="mb-3 text-muted">
        <i class="fas fa-users"></i> 
        Nombre de résultats : <strong>{{ clans|length }}</strong>
    </p>
    
    <table id="search-clans-table" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Tag</th>
                <th>Score</th>
                <th>Trophées</th>
                <th>Donations</th>
                <th>Membres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for clan in clans %}
                <tr data-clan-tag="{{ clan.tag }}">
                    <td>{{ clan.name }}</td>
                    <td><code>{{ clan.tag }}</code></td>
                    <td>{{ clan.clanScore|number_format }}</td>
                    <td>{{ clan.clanWarTrophies|number_format }}</td>
                    <td>{{ clan.donationsPerWeek|number_format }}</td>
                    <td>{{ clan.members }}</td>
                    <td>
                        <button 
                            class="btn btn-primary btn-sm"
                            data-action="clanRiverRaceLog#call" 
                            data-clan-tag="{{ clan.tag }}">
                            <i class="fas fa-eye"></i> Sélectionner
                        </button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
